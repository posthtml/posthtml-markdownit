{
  "name": "posthtml-markdownit",
  "description": "A PostHTML plugin to transform Markdown using markdown-it",
  "version": "3.1.2",
  "license": "MIT",
  "author": "TheComputerM",
  "bugs": "https://github.com/posthtml/posthtml-markdownit/issues",
  "homepage": "https://github.com/posthtml/posthtml-markdownit",
  "repository": "posthtml/posthtml-markdownit",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vitest",
    "build": "unbuild",
    "prepack": "unbuild",
    "test": "vitest run --coverage",
    "lint": "biome lint ./lib ./test",
    "pretest": "npm run lint",
    "release": "npx np"
  },
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "markdown"
  ],
  "dependencies": {
    "markdown-it": "^14.0.0",
    "min-indent": "^1.0.0",
    "posthtml": "^0.16.6",
    "posthtml-parser": "^0.12.0",
    "posthtml-render": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@vitest/coverage-v8": "^3.0.5",
    "markdown-it-emoji": "^3.0.0",
    "unbuild": "^2.0.0",
    "vitest": "^3.0.5"
  }
}
